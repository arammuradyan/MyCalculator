<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/resultField_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:gravity="right"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/operation_tv"
        tools:text="4"/>
    <TextView
        android:id="@+id/operation_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:padding="16dp"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@+id/resultField_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="+"/>
    <EditText
        android:id="@+id/numberField_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:padding="16dp"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@+id/operation_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="45"/>
    <Button
        android:onClick="onNumberClick"
        android:id="@+id/one_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberField_et"
        app:layout_constraintRight_toLeftOf="@+id/two_btn"/>
    <Button
        android:id="@+id/two_btn"
        android:onClick="onNumberClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/one_btn"
        app:layout_constraintTop_toBottomOf="@+id/numberField_et"
        app:layout_constraintRight_toLeftOf="@+id/three_btn"/>
    <Button
        android:id="@+id/three_btn"
        android:onClick="onNumberClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/two_btn"
        app:layout_constraintTop_toBottomOf="@+id/numberField_et"
        app:layout_constraintRight_toLeftOf="@+id/c_btn" />
    <Button
        android:id="@+id/c_btn"
        android:onClick="onClearClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        app:layout_constraintLeft_toRightOf="@+id/three_btn"
        app:layout_constraintTop_toBottomOf="@+id/numberField_et"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/four_btn"
        android:onClick="onNumberClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one_btn"
        app:layout_constraintRight_toLeftOf="@+id/five_btn"/>
    <Button
        android:id="@+id/five_btn"
        android:onClick="onNumberClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/four_btn"
        app:layout_constraintTop_toBottomOf="@+id/two_btn"
        app:layout_constraintRight_toLeftOf="@+id/six_btn"/>
    <Button
        android:id="@+id/six_btn"
        android:onClick="onNumberClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/five_btn"
        app:layout_constraintTop_toBottomOf="@+id/three_btn"
        app:layout_constraintRight_toLeftOf="@+id/sum_btn"/>
    <Button
        android:id="@+id/sum_btn"
        android:onClick="onOperationClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@+id/six_btn"
        app:layout_constraintTop_toBottomOf="@+id/c_btn"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/seven_btn"
        android:onClick="onNumberClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/four_btn"
        app:layout_constraintRight_toLeftOf="@+id/eight_btn"/>
    <Button
        android:id="@+id/eight_btn"
        android:onClick="onNumberClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintTop_toBottomOf="@+id/five_btn"
        app:layout_constraintLeft_toRightOf="@+id/seven_btn"
        app:layout_constraintRight_toLeftOf="@+id/nine_btn"/>
    <Button
        android:id="@+id/nine_btn"
        android:onClick="onNumberClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintTop_toBottomOf="@+id/six_btn"
        app:layout_constraintLeft_toRightOf="@+id/eight_btn"
        app:layout_constraintRight_toLeftOf="@+id/minus_btn"/>
    <Button
        android:id="@+id/minus_btn"
        android:onClick="onOperationClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@+id/sum_btn"
        app:layout_constraintLeft_toRightOf="@+id/nine_btn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/zero_btn"
        android:onClick="onNumberClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/seven_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/equal_btn"/>
    <Button
        android:id="@+id/equal_btn"
        android:onClick="onOperationClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        app:layout_constraintTop_toBottomOf="@+id/eight_btn"
        app:layout_constraintLeft_toRightOf="@+id/zero_btn"
        app:layout_constraintRight_toLeftOf="@+id/divid_btn"/>
    <Button
        android:id="@+id/divid_btn"
        android:onClick="onOperationClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintTop_toBottomOf="@+id/nine_btn"
        app:layout_constraintLeft_toRightOf="@+id/equal_btn"
        app:layout_constraintRight_toLeftOf="@+id/count_btn"/>
    <Button
        android:id="@+id/count_btn"
        android:onClick="onOperationClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        app:layout_constraintTop_toBottomOf="@+id/minus_btn"
        app:layout_constraintLeft_toRightOf="@+id/divid_btn"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>